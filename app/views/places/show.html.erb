<h1><%= @place.name %></h1>

<h2>My Entries</h2>
<% @entries.each do |entry| %>
  <div style="border: 1px solid #ddd; padding: 10px; margin-bottom: 10px;">
    <h3><%= entry.title %></h3>
    <h4>Occurred on: <%= entry.occurred_on.strftime("%B %d, %Y") rescue "No date provided" %></h4>
    <p><%= entry.description %></p>

    <% if entry.image.attached? %>
      <p><%= image_tag entry.image.variant(resize_to_limit: [500, 500]).processed %></p>
    <% end %>
  </div>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place.id %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
