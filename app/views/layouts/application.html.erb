<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <% if flash[:notice] %>
      <div style="color: white; background-color: green; padding: 10px; margin-bottom: 10px; text-align: center;">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div style="color: white; background-color: red; padding: 10px; margin-bottom: 10px; text-align: center;">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div>
      <a href="/">Home</a>

      <% if session[:user_id] %>
        <span>Welcome, <%= User.find(session[:user_id]).username %>!</span>
        <a href="/logout" class="nav-link">Logout</a>
      <% else %>
        <a href="/login">Login</a>
        <a href="/users/new">Signup</a>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>